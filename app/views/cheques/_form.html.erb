<%= form_for(@cheque) do |f| %>
<div class="content">
  <div class="container">
    <div class="row"></div>
    <div class="col-md-2"></div>
    <div class="col-md-8" style="padding-bottom: 10px">
      <div class="panel panel-info" style="margin: 20px">
      <div class="panel-heading"><h3 class="panel-title pull-left">New Cheque</h3>
        <%= f.submit :class => "btn btn-default pull-right actions"%>
      <div class="clearfix"></div>
      </div>
      <div class="row pull-center">
        <div class="col-md-2"></div>
        <div class="col-md-4 field" style="margin: 1em">
          <%= f.text_field :name, :class => "form-control", :placeholder => "Name"%><br>
          <%= f.text_field :money, :class => "form-control", :placeholder => "Amount", :value => 0.00%><br>
        </div>
        <div class="field" style="margin: 1em">
          <%= f.hidden_field :creation, {:id => 'date_id', :value => Time.now.strftime('%Y-%m-%d')} %>
          <div style="overflow:hidden;">
          <div class="form-group">
              <div class="row">
                  <div class="col-md-4">
                      <div id="datetimepicker12"></div>
                  </div>
              </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
      <script type="text/javascript">
        $(function () {
            $('#datetimepicker12').datetimepicker({
                inline: true,
                sideBySide: true,
                format: 'YYYY-MM-DD'
            }).on('dp.change', function (e) {
              setDate(e.date);
            });
        });
        function setDate(new_date) {
          $('#date_id').val(new_date);
        }
    </script>
<% end %>
